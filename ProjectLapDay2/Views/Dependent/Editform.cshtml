@model Dependant
@{
    ViewData["Title"] = "Editform";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<div class="m-1 p-5">


    <h1 class="text-xl-center text-primary">Update Dependent</h1>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" method="post">
                @Html.HiddenFor(m=>m.id)
                <div class="form-group">

                    @Html.LabelFor(m=>m.name)
                    @Html.TextBoxFor(m=>m.name,new{@class="form-control"})


                </div>

                <div class="form-group">
                    @Html.LabelFor(m=>m.age)
                    @Html.TextBoxFor(m=>m.age,new{@class="form-control"})

                </div>


            <div class="form-group">
                <label asp-for="Emp_id" class="control-label text-info"></label>
                <select asp-for="Emp_id" asp-items=@ViewBag.employees class="form-control"></select>
            </div>

                <button type="submit" class="btn btn-success my-2 form-control">

                    Update
                </button>

                <a asp-action="Index" class="btn btn-danger form-control">

                    Cancel
                </a>
            </form>
        </div>

    </div>

   