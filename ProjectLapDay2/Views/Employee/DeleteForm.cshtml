@model ProjectLapDay2.Models.Employee
@{
    ViewData["Title"] = "DeleteForm";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}



<div class="col-6 m-auto">
<h1>Delete Employee</h1>
<h3 style="color:seagreen" class="my-3">Are you sure you want to delete this?</h3>
    <h4 style="color:seagreen">Employee Information</h4>
    <hr />    <hr />
    <dl class="dl-horizontal">
        <dt class="text-muted">
            Employee's Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>

        <dt class="text-primary">
            Employee's Age
        </dt>

        <dd>
            @Html.DisplayFor(model => model.age)
        </dd>

        <dt class="text-info">
            Employee's Address
        </dt>

        <dd>
            @Html.DisplayFor(model => model.address)
        </dd>


        <dt class="text-danger">
            student's Salary
        </dt>

        <dd>
            @Html.DisplayFor(model => model.salary)
        </dd>

    </dl>
    <form asp-action="Delete" asp-route-id="@Model.id">
        <button type="submit" value="Delete" class="btn btn-danger mx-2">
            <i class="icofont-ui-delete"></i>
            Delete
        </button>
        <a asp-action="getAll" class="btn btn-outline-primary">
            <i class="icofont-ui-close"></i>
            Cancel
        </a>
    </form>

</div>

