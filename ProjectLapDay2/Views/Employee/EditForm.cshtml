@model ProjectLapDay2.Models.Employee

@{
    ViewData["Title"] = "EditForm";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}




    <div  class="m-1 p-5">


<h1 class="text-xl-center text-primary">Update Employee</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" >
            <div class="form-group">
                <input name = "id" value="@Model.id" hidden />
                <label  class="control-label text-primary">Name</label>
                <input  name="name" class="form-control" placeholder="Please add name here" value="@Model.name" />
            </div>

            <div class="form-group">
                <label  class="control-label text-primary">Age</label>
                <input  name="age" type="number" class="form-control" placeholder="Please add age here" value="@Model.age"/>
            </div>

            <div class="form-group">
                <label  class="control-label text-primary">Address</label>
                <input  name="address" class="form-control" placeholder="Please add address here" value="@Model.address"/>
            </div>

             <div class="form-group">
                <label  class="control-label text-primary">Salary</label>
                <input  name="salary" typea="number" class="form-control" placeholder="Please add salary here" value="@Model.salary"/>
            </div>
            <div class="form-group">
                <label class="control-label text-primary">Department </label>
                <select  name="dept_id" class="form-control" >

                    @foreach(var dept in (List<ProjectLapDay2.Models.Department>)ViewData["dept"]){
                    @if(@Model.dept_id==dept.id){

                            <option  value="@dept.id" selected>@dept.name</option>
                        }
                        else
                        {
                        <option  value="@dept.id" >@dept.name</option>
                        } 
                    }
                </select>
            </div>
            
            <button type="submit" class="btn btn-success my-2 form-control">
                
                Update
            </button>

            <a asp-action="getAll" class="btn btn-danger form-control">
              
                Cancel
            </a>
        </form>
    </div>

        </div>