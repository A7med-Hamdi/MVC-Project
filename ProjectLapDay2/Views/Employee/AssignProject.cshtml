@model empprooo
@{
    ViewData["Title"] = "AssignProject";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

@TempData["Error"]


<h1 class="text-xl-center text-primary">Add Project</h1>

<div class="row">
  
    <div class="m-auto col-6">
        <form asp-action="AssignProjectDb" method="post">
              <div class="form-group">
                <label class="control-label text-muted">Employees</label>
                 
                <select id="EmpId" name="EmpId" class="form-select">
                    @foreach (var Emp in Model.Employees)
                    {
                        <option  class="form-control" value="@Emp.id">@Emp.name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label text-muted">Projects </label>
                <select id="PId" name="multi_projs" multiple class="form-select">
                    @foreach (var project in Model.projects)
                    {
                        <option  class="form-control" value="@project.id">@project.name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Project hours</label>
                <input id="hours"   name="hours" class="form-control" type="number" />
            </div>
            <div class="form-group">
                
             <button type="submit" class="btn btn-success my-2">
           
               Add
            </button>

            <a asp-action="getAll" class="btn btn-danger">
               
                Cancel
            </a>
               
            </div>

        </form>
    </div>
    
</div>  
